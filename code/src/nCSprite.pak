#--------------------------------------------------------------------
#   Creación de workspaces para el manejo de sprites
#--------------------------------------------------------------------
workspace CSprite
beginmodule nCSprite
    setdir CSprite
    setfiles { nCSprite_main nCSprite_cmds }
    setheaders { nCSprite }
endmodule
#--------------------------------------------------------------------
begintarget nCSprite
    settype package
    setmods {
        nCSprite 
    }
    setdepends { nkernel nnebula }
    setlibs_win32 {
        nkernel.lib
        nnebula.lib
    }
    setlibs_unix  { nkernel nnebula }
endtarget
#--------------------------------------------------------------------
#   EOF
#--------------------------------------------------------------------